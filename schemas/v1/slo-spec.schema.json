{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://openslo.com/schemas/v1/slo-spec.schema.json",
	"title": "OpenSLO: SLO",
	"description": "",
	"type": "object",
	"properties": {
		"kind": {
			"enum": ["SLO"]
		},
		"spec": {
			"type": "object",
			"required": [""],
			"properties": {
				"description": {
					"type": "string",
					"maxLength": 1050
				},
				"service": {
					"type": "string",
					"minLength": 1,
					"maxLength": 255,
					"pattern": "^[a-z0-9][a-z0-9.|\\/\\\\-]*[a-z0-9]*$"
				},
				"indicator": {
					"allOf": [
						{
							"$ref": "https://openslo.com/schemas/v1/metadata.schema.json"
						},
						{
							"$ref": "https://openslo.com/schemas/v1/sli-spec.schema.json"
						}
					]
				},
				"indicatorRef": {},
				"timeWindow": {},
				"budgetingMethod": {},
				"objectives": {},
				"alertPolicies": {}
			},
			"allOf": [
				{
					"not": {
						"type": "object",
						"required": ["indicator", "indicatorRef"]
					}
				},
				{
					"oneOf": [
						{
							"type": "object",
							"required": ["indicator"]
						},
						{
							"type": "object",
							"required": ["indicatorRef"]
						}
					]
				}
			]
		}
	}
}
