{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://openslo.com/schemas/v1/parts/slo-spec.schema.json",
	"title": "OpenSLO: SLO",
	"description": "",
	"type": "object",
	"properties": {
		"kind": {
			"enum": ["SLO"]
		},
		"spec": {
			"type": "object",
			"required": [""],
			"properties": {
				"description": {
					"type": "string",
					"maxLength": 1050
				},
				"service": {
					"$ref": "https://openslo.com/schemas/v1/parts/name.schema.json"
				},
				"indicator": {
					"allOf": [
						{
							"$ref": "https://openslo.com/schemas/v1/parts/metadata.schema.json"
						},
						{
							"$ref": "https://openslo.com/schemas/v1/parts/sli-spec.schema.json"
						}
					]
				},
				"indicatorRef": {
					"$ref": "https://openslo.com/schemas/v1/parts/name.schema.json"
				},
				"timeWindow": {},
				"budgetingMethod": {},
				"objectives": {},
				"alertPolicies": {}
			},
			"allOf": [
				{
					"not": {
						"type": "object",
						"required": ["indicator", "indicatorRef"]
					}
				},
				{
					"oneOf": [
						{
							"type": "object",
							"required": ["indicator"]
						},
						{
							"type": "object",
							"required": ["indicatorRef"]
						}
					]
				}
			]
		}
	}
}
