{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://openslo.com/schemas/v1/parts/alertcondition-spec.schema.json",
	"title": "OpenSLO: AlertCondition",
	"description": "",
	"type": "object",
	"properties": {
		"spec": {
			"type": "object",
			"required": [
				"severity",
				"condition"
			],
			"properties": {
				"description": {
					"$ref": "https://openslo.com/schemas/v1/parts/description.schema.json"
				},
				"severity": {
					"type": "string"
				},
				"condition": {
					"type": "object",
					"properties": {
						"kind": {
							"enum": [
								"burnrate"
							]
						},
						"threshold": {
							"type": "number"
						},
						"lookbackWindow": {
							"$ref": "https://openslo.com/schemas/v1/parts/duration-shorthand.schema.json"
						},
						"alertAfter": {
							"$ref": "https://openslo.com/schemas/v1/parts/duration-shorthand.schema.json"
						}
					},
					"if": {
						"type": "object",
						"properties": {
							"kind": {
								"const": "burnrate"
							}
						}
					},
					"then": {
						"type": "object",
						"required": [
							"threshold",
							"lookbackWindow",
							"alertAfter"
						]
					}
				}
			}
		}
	}
}
